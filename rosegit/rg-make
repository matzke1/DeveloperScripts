#!/bin/bash
#
# Runs the equivalent of "rosegit-env make" but also filters most of the gmake garbage output
#
source rosegit-functions.sh || exit 1

# Parse command-line arguments
my_args=() rg_args=()
while [ "$#" -gt 0 ]; do
    case "$1" in
	--) my_args=("${my_args[@]}" "$@")
	    break
	    ;;
	-*) if rosegit_preamble_switch "$1"; then
	        rg_args=("${rg_args[@]}" "$1")
            else
	        my_args=("${my_args[@]}" "$1")
            fi
	    shift
	    ;;
	*)  my_args=("${my_args[@]}" "$@")
	    break
	    ;;
    esac
done
rosegit_preamble "${rg_args[@]}"

if [ -n "$RG_USE_CMAKE" ]; then
    ${RG_MAKE:-make} "${my_args[@]}"
    exit $?
else
    ${RG_MAKE:-make} "${my_args[@]}" 2>&1 | rg-filter-make-error --progress
    exit ${PIPESTATUS[0]}
fi
